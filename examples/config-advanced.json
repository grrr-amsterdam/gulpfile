{
  "app": {
    "domain": "localhost.<something>.com",
    "port": 443
  },
  "paths": {
    "src": "assets",
    "dist": "dist"
  },
  "tasks": {
    "copy": [
      "assets/fonts/**/*",
      "assets/videos/**/*",
      "assets/images/*.ico",
      "assets/scripts/vendor/**/*.js"
    ],
    "icons": {
      "src": "assets/images/icons/**/*.svg",
      "dist": "dist/images"
    },
    "images": {
      "src": "assets/images/**/*.{png,gif,jpg,jpeg,svg}",
      "dist": "dist/images"
    },
    "javascript": {
      "src": "assets/scripts/**/*.js",
      "dist": "dist/scripts",
      "main": [
        "assets/scripts/main.js"
      ],
      "bundles": [
        {
          "bundle": "main.js",
          "watch": true,
          "babelify": {
            "global": true
          },
          "babel": {
            "ignore": ["/\/node_modules\/(?!.*.*\/.*.mjs)/"],
            "env": {
              "production": {
                "presets": [ "minify" ]
              }
            },
            "plugins": [
              "@babel/plugin-proposal-object-rest-spread"
            ],
            "presets": [
              [
                "@babel/preset-env", {
                  "targets": {
                    "browsers": [
                      "Chrome >= 60",
                      "Safari >= 10.1",
                      "iOS >= 10.3",
                      "Firefox >= 54",
                      "Edge >= 15"
                    ]
                  }
                }
              ]
            ]
          }
        },
        {
          "bundle": "main-legacy.js",
          "watch": false,
          "babel": {
            "plugins": [
              "@babel/plugin-proposal-object-rest-spread"
            ],
            "presets": [
              [
                "@babel/preset-env", {
                  "targets": {
                    "browsers": [
                      "> 0.25%",
                      "ie >= 9"
                    ]
                  }
                }
              ]
            ]
          }
        }
      ]
    },
    "javascript:vendor": [
      {
        "src": [
          "node_modules/fg-loadjs/loadJS.js",
          "node_modules/svg4everybody/dist/svg4everybody.js"
        ],
        "dist": "dist/scripts/vendor"
      },
      {
        "src": [
          "node_modules/@babel/polyfill/dist/polyfill.js"
        ],
        "dist": "assets/build/scripts/vendor",
        "bundle": "babel-polyfill.js"
      }
    ],
    "sass": {
      "src": "assets/styles/**/*.scss",
      "dist": "dist/styles",
      "main": [
        "assets/styles/base.scss",
        "assets/styles/admin.scss"
      ],
      "autoprefixer": {
        "browsers": [
          "> 0.25%",
          "ie >= 9"
        ]
      },
      "cleanCss": {
        "compatibility": "ie8",
        "level": 1
      }
    },
    "revision": {
      "manifest": {
        "directory": "dist",
        "file": "assets.json"
      },
      "files": [
        "assets/build/videos/**/*"
      ]
    },
    "watch": {
      "files": [
        "{lib,templates}/**/*.{php,phtml}",
        "**/*.twig"
      ]
    }
  }
}
