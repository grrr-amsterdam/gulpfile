{
  "app": {
    "domain": "localhost.<something>.com",
    "port": 443
  },
  "paths": {
    "src": "./assets",
    "dist": "./dist"
  },
  "tasks": {
    "copy": [
      "./assets/fonts/**/*",
      "./assets/scripts/vendor/**/*.js"
    ],
    "icons": {
      "src": "./assets/images/icons/**/*.svg",
      "dist": "./dist/images"
    },
    "images": {
      "src": "./assets/images/**/*.{png,gif,jpg,jpeg,svg}",
      "dist": "./dist/images"
    },
    "javascript": {
      "src": "./assets/scripts/**/*.js",
      "dist": "./dist/scripts",
      "main": "./assets/scripts/main.js",
      "bundle": "main.js",
      "babel": {
        "plugins": [
          "lodash",
          "babel-plugin-transform-object-rest-spread"
        ],
        "presets": [
          [
            "env", {
              "targets": {
                "browsers": [
                  "> 5%",
                  "last 3 versions",
                  "safari >= 7",
                  "ie >= 9"
                ]
              }
            }
          ]
        ]
      }
    },
    "javascript:vendor": [
      {
        "src": [
          "./node_modules/fg-loadjs/loadJS.js",
          "./node_modules/svg4everybody/dist/svg4everybody.js"
        ],
        "dist": "./dist/scripts/vendor"
      },
      {
        "src": [
          "./node_modules/fg-loadjs/loadJS.js",
          "./node_modules/svg4everybody/dist/svg4everybody.js"
        ],
        "dist": "./dist/scripts",
        "bundle": "libs.js"
      }
    ],
    "sass": {
      "src": "./assets/styles/**/*.scss",
      "dist": "./dist/styles",
      "main": [
        "./assets/styles/base.scss",
        "./assets/styles/admin.scss"
      ],
      "autoprefixer": {
        "browsers": [
          ">5%",
          "last 3 versions",
          "ie 9",
          "ie 10",
          "ie 11"
        ]
      },
      "cleanCss": {
        "compatibility": "ie8",
        "level": 1,
      }
    },
    "revision": {
      "manifest": {
        "directory": "./dist",
        "files": "assets.json"
      }
    },
    "watch": {
      "files": [
        "./{lib,templates}/**/*.{php,phtml}",
        "./**/*.twig"
      ]
    }
  }
}
