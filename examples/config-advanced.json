{
  "dotenv": {
    "file": "../../.env"
  },
  "paths": {
    "src": "assets",
    "dist": "dist"
  },
  "tasks": {
    "copy": [
      "assets/fonts/**/*",
      "assets/videos/**/*",
      "assets/images/*.ico",
      "assets/scripts/vendor/**/*.js"
    ],
    "icons": {
      "src": "assets/images/icons/**/*.svg",
      "dist": "dist/images"
    },
    "images": {
      "src": "assets/images/**/*.{png,gif,jpg,jpeg,svg}",
      "dist": "dist/images"
    },
    "javascript": {
      "src": "assets/scripts/**/*.js",
      "dist": "dist/scripts",
      "main": "assets/scripts/main.js",
      "bundles": [
        {
          "bundle": "bundle.js",
          "watch": true,
          "rollup": {
            "input": {
              "external": [
                "moment"
              ]
            },
            "output": {
              "globals": {
                "moment": "momentMock"
              }
            }
          },
          "babel": {
            "plugins": [
              "@babel/plugin-proposal-object-rest-spread",
              "@babel/plugin-proposal-nullish-coalescing-operator",
              "@babel/plugin-proposal-optional-chaining"
            ],
            "presets": [
              [
                "@babel/preset-env", {
                  "targets": {
                    "esmodules": true
                  }
                }
              ]
            ]
          }
        },
        {
          "bundle": "bundle-legacy.js",
          "watch": false,
          "rollup": {
            "input": {
              "external": [
                "moment"
              ]
            },
            "output": {
              "globals": {
                "moment": "momentMock"
              }
            }
          },
          "babel": {
            "plugins": [
              "@babel/plugin-proposal-object-rest-spread",
              "@babel/plugin-proposal-nullish-coalescing-operator",
              "@babel/plugin-proposal-optional-chaining"
            ],
            "presets": [
              [
                "@babel/preset-env", {
                  "targets": "> 0.25%, not dead"
                }
              ]
            ]
          }
        }
      ]
    },
    "javascript:vendor": [
      {
        "src": [
          "node_modules/fg-loadjs/loadJS.js",
          "node_modules/svg4everybody/dist/svg4everybody.js"
        ],
        "dist": "dist/scripts/vendor"
      },
      {
        "src": [
          "node_modules/@babel/polyfill/dist/polyfill.js"
        ],
        "dist": "assets/build/scripts/vendor",
        "bundle": "babel-polyfill.js"
      }
    ],
    "sass": {
      "src": "assets/styles/**/*.scss",
      "dist": "dist/styles",
      "main": [
        "assets/styles/base.scss",
        "assets/styles/admin.scss"
      ],
      "autoprefixer": {
        "overrideBrowserslist": [
          "last 2 versions",
          "> 0.5%",
          "ie >= 11",
          "not dead",
        ]
      },
      "pxtorem": {
        "rootValue": 16,
        "propWhiteList": ["*"],
      },
      "cleanCss": {
        "compatibility": "ie11",
        "level": 1
      }
    },
    "revision": {
      "manifest": {
        "directory": "dist",
        "file": "assets.json"
      },
      "files": [
        "assets/build/videos/**/*"
      ]
    },
    "modernizr": {
      "options": [
        "addTest",
        "setClasses"
      ],
      "tests": [
        "picture"
      ]
    },
    "watch": {
      "files": [
        "{lib,templates}/**/*.{php,phtml}",
        "**/*.twig"
      ],
      "browsersync": false
    }
  }
}
