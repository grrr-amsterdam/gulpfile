{
  "dotenv": {
    "file": "../../.env"
  },
  "paths": {
    "src": "assets",
    "dist": "dist"
  },
  "tasks": {
    "icons": {
      "src": "assets/images/icons/**/*.svg",
      "dist": "dist/images"
    },
    "images": {
      "src": "assets/images/**/*.{png,gif,jpg,jpeg,svg}",
      "dist": "dist/images"
    },
    "javascript": {
      "src": "assets/scripts/**/*.js",
      "dist": "dist/scripts",
      "main": "assets/scripts/main.js",
      "bundles": [
        {
          "bundle": "bundle.js",
          "watch": true,
          "minify": true,
          "babelify": {
            "global": true
          },
          "babel": {
            "ignore": ["/\/node_modules\/(?!.*.*\/.*.mjs)/"],
            "env": {
              "production": {
                "presets": [ "minify" ]
              }
            },
            "plugins": [
              "@babel/plugin-proposal-object-rest-spread"
            ],
            "presets": [
              [
                "@babel/preset-env", {
                  "targets": {
                    "browsers": [
                      "> 0.25%",
                      "ie >= 9"
                    ]
                  }
                }
              ]
            ]
          }
        }
      ]
    },
    "sass": {
      "src": "assets/styles/**/*.scss",
      "dist": "dist/styles",
      "main": [
        "assets/styles/base.scss"
      ]
    }
  }
}
