{
  "app": {
    "domain": "localhost.<something>.com"
  },
  "paths": {
    "src": "assets",
    "dist": "dist"
  },
  "tasks": {
    "icons": {
      "src": "assets/images/icons/**/*.svg",
      "dist": "dist/images"
    },
    "images": {
      "src": "assets/images/**/*.{png,gif,jpg,jpeg,svg}",
      "dist": "dist/images"
    },
    "javascript": {
      "src": "assets/scripts/**/*.js",
      "dist": "dist/scripts",
      "main": "assets/scripts/main.js",
      "bundles": [
        {
          "bundle": "main.js",
          "watch": true,
          "babel": {
            "env": {
              "production": {
                "presets": [ "minify" ]
              }
            },
            "plugins": [
              "babel-plugin-transform-object-rest-spread"
            ],
            "presets": [
              [
                "env", {
                  "targets": {
                    "browsers": [
                      "Chrome >= 60",
                      "Safari >= 10.1",
                      "iOS >= 10.3",
                      "Firefox >= 54",
                      "Edge >= 15"
                    ]
                  }
                }
              ]
            ]
          }
        }
      ]
    },
    "sass": {
      "src": "assets/styles/**/*.scss",
      "dist": "dist/styles",
      "main": "assets/styles/base.scss"
    }
  }
}
